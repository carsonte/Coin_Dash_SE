# Global configuration (UTC based)

symbols:
  - BTCUSDT
  - ETHUSDT

timeframes:
  - 1d
  - 4h
  - 1h
  - 30m

market_filter:
  score_thresholds:
    BTCUSDT: 0.60
    ETHUSDT: 0.76
  weights:
    atr_norm: 0.4
    bb_width_norm: 0.35
    vol_change_norm: 0.25
  silent:
    low_vol_consecutive: 3
    resume_consecutive: 2

risk:
  risk_per_trade: 0.01         # 1% equity per trade
  min_rr: 1.8                  # minimal risk-reward ratio
  sl_atr_mult: 1.5
  tp_atr_mult: 3.0

deepseek:
  enabled: false               # enable when key available
  model: deepseek-chat

exchange:
  name: binance
  type: futures
  rate_limit: true

backtest:
  initial_equity: 10000
  fee_rate: 0.0004             # taker fee approx

log:
  level: INFO

